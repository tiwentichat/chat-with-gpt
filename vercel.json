{
  "version": 2,
  "builds": [
    { "src": "app/**", "use": "@vercel/node" },
    { "src": "server/**", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/server/src/index.ts" }
  ],
  "env": {
    "OPENAI_API_KEY": "@openai-api-key",
    "ELEVENLABS_API_KEY": "@elevenlabs-api-key"
  },
  "envSecrets": {
    "openai-api-key": {
      "target": "ENV",
      "from": "openaiApiKey"
    },
    "elevenlabs-api-key": {
      "target": "ENV",
      "from": "elevenlabsApiKey"
    }
  }
}
